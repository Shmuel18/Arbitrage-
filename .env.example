# Trinity Arbitrage Engine Configuration
# Copy to .env and fill with actual credentials

# Environment
ENVIRONMENT=production  # production, staging, development
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trinity_arbitrage
POSTGRES_USER=trinity
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Exchange API Keys - Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=false

# Exchange API Keys - Bybit
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=false

# Exchange API Keys - OKX
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=
